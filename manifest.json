{
  "manifest_version": 2,
  "name": "SiteMapper",
  "version": "0.1",

  "description": "Improves ease of navigating modern websites bloated with massive images and poor visual design.",

  "icons": {
    "48": "icons/border-48.png"
  },

  "permissions": [
    "tabs",
    "activeTab"
  ],

  "browser_action": {
    "default_icon": "icons/border-48.png",
    "default_title": "SiteMapper",
    "default_popup": "popup/sitemap-display.html"
  },

  "background": {
    "scripts": ["popup/sitemap-action.js"]
  },

  "//content_scripts": [
    {
      "matches": ["*://*.mozilla.org/*"],
      "js": ["site-mapper.js"]
    }
  ]
}